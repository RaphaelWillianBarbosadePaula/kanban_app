<div class="max-w-3xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Editar Perfil</h3>
        <p class="mt-1 text-sm text-gray-500">Altere suas informações básicas ou atualize sua senha.</p>
      </div>
    </div>

    <div class="mt-5 md:col-span-2 md:mt-0">
      <%= form_with model: @user, local: true do |f| %>
        <div class="shadow sm:overflow-hidden sm:rounded-lg">
          <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
            
            <div>
              <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-2 px-2" %>
            </div>

            <div>
              <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-2 px-2" %>
            </div>

            <div class="bg-gray-50 p-4 rounded-md">
              <p class="text-xs text-gray-500 mb-4 italic">Deixe em branco se não desejar alterar a senha.</p>
              <div>
                <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-base py-2 px-2" %>
              </div>
            </div>

          </div>
          <div class="bg-gray-50 px-4 py-3 text-right sm:px-6 flex justify-between items-center">
            <%= link_to "Cancelar", user_path(@user), class: "text-sm text-gray-600 hover:text-gray-900" %>
            <%= f.submit "Salvar Alterações", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>